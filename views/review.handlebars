   <!-- Page content-->
        <div class="container mt-5">
            <div class="row">
                <div class="col-lg-8">
                    <!-- Post content-->
                    <article>
                        <!-- Post header-->
                        <header class="mb-4">
                            <!-- Post title-->
                            <h1 class="fw-bolder mb-1">{{name}}</h1>
                            <!-- Post meta content-->
                            <div class="text-muted fst-italic mb-2">Posted on February 7, 2024</div>
                            <!-- Post categories-->
                        </header>
                             <body>
                            <!-- Preview image figure-->
                        <figure class="mb-4"><img class="img-fluid rounded"> {{image_url}} </figure>
                        <!-- Post content-->
                        <section class="mb-5">
                            <h3>{{location}}</h3>
                            <ul>
                                <li> {{difficulty}} </li>
                                <li> {{distance}} </li>
                            </ul>
                            {{description}}
                        </section>
                    </article>
                             </body>
